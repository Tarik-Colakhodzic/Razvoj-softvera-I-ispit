@{
    Layout = null;
}

@model TakmicenjeUcesnikVM

<form asp-controller="Takmicenje" asp-action="SnimiUcesnika">
    <div class="form-group">
        <label asp-for="@Model.Ucesnik">Ucesnik:</label>
        @if (Model.Uredi)
        {
            <input value="@Model.Ucesnik" class="form-control InputPolje" />
            <input asp-for="UcesnikId" value="@Model.UcesnikId" hidden />
        }
        else
        {
            <select asp-for="UcesnikId" asp-items="Model.Ucesnici" class="form-control InputPolje"></select>
        }
    </div>
    <div class="form-group">
        <label asp-for="Bodovi">Bodovi:</label>
        <input asp-for="Bodovi" value="@Model.Bodovi" class="form-control InputPolje" />
    </div>
    <input asp-for="Uredi" value="@Model.Uredi" hidden />
    <input asp-for="TakmicenjeId" value="@Model.TakmicenjeId" hidden/>
    <button class="btn btn-primary">Snimi</button>
</form>